{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist/",
        "baseUrl": "./source/",
        "lib": ["es2018", "dom"],
        "jsx": "react",
        "paths": {
            "@crx/*": ["./*"],
            "@solver/*": ["../../source/*"]
        }
    },
    "include": [
        "./source/**/*"
    ]
}